{% set classes = [
    'block-banner',
    'with-overlay',
    'with-background',
] %}

<section{{ attributes.addClass(classes) }}>
    {{ content.field_image }}
    <div class="title-wrapper">
        <h1>{{ content.field_title }}</h1>
        {% if content.field_subtitle %}
            <div class="subtitle">
                {{ content.field_subtitle }}
            </div>
        {% endif %}
    </div>
</section>
