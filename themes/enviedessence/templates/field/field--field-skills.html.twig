<div{{ attributes.addClass('field-skills') }}>

    <div class="skill-list-wrapper">
        <div class="skill-list" data-count="{{ items|length }}">
            {% for item in items %}
            <div
                class="skill-list-item"
                data-skill-index="{{ loop.index }}"
                data-aos="zoom-in"
                data-aos-duration="1000"
                data-aos-delay="{{ 300 * loop.index0 }}"
            >
                <a
                    href="{{ path('entity.node.canonical', {'node': item.content['#node'].id()}) }}"
                    class="link-wrapper"
                >
                    {{ item }}
                </a>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="skill-title-wrapper" data-aos="fade-up">
        {% for item in items %}
        <div class="skill-title" data-skill-index="{{ loop.index }}">
            {{ item.content['#node'].getTitle() }}
        </div>
        {% endfor %}
    </div>

    <div class="skill-detail-wrapper" data-aos="fade-up">
        {% for item in items %}
        <div class="skill-detail" data-skill-index="{{ loop.index }}">
            {{ item.content['#node'].field_teaser.value }}
        </div>
        {% endfor %}
    </div>

    <div class="skill-button-wrapper">
        <span class="icon icon-left"></span>
        <span class="icon icon-right"></span>
    </div>

</div>
